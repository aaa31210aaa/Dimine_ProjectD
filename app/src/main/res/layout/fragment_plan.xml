        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:scrollbars="none">-->
    <!--</android.support.v4.view.ViewPager>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:orientation="horizontal"
        android:background="@color/gray_qian"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center">

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/plan_viewpagertab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            app:stl_defaultTabTextColor="@color/white"
            app:stl_defaultTabTextHorizontalPadding="60dp"
            app:stl_dividerColor="#00000000"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/blue_deep"
            app:stl_indicatorCornerRadius="@dimen/x35"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="@dimen/x70"
            app:stl_underlineColor="#00000000"
            app:stl_underlineThickness="0dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/plan_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/plan_viewpagertab" />


</LinearLayout>
