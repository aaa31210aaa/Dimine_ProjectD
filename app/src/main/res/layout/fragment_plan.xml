<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="fragment.PlanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/blue_deep">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/plan_title"
            android:textColor="@color/white"
            android:textSize="@dimen/x50" />

    </LinearLayout>

    <include layout="@layout/gray_line" />

    <!--<android.support.design.widget.TabLayout-->
        <!--android:id="@+id/plan_tablayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/x100"-->
        <!--app:tabGravity="fill"-->
        <!--app:tabIndicatorColor="@color/blue_deep"-->
        <!--app:tabBackground="@drawable/tab_select_btn"-->
        <!--app:tabIndicatorHeight="@dimen/x10"-->
        <!--app:tabMode="fixed"-->
        <!--app:tabSelectedTextColor="@color/blue_deep"-->
        <!--app:tabTextColor="@color/black"></android.support.design.widget.TabLayout>-->

    <!--<android.support.v4.view.ViewPager-->
