<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_deep"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.administrator.dimine_projectd.TransactDbsy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_height"
                android:background="@color/blue_deep"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_transact"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />


            </LinearLayout>

            <ImageView
                android:id="@+id/transact_dbsy_back"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/back" />
        </RelativeLayout>

        <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/transact_dbsy_tablayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/x120"-->
            <!--android:layout_gravity="center"-->
            <!--app:tabBackground="@drawable/tab_select_btn"-->
            <!--app:tabGravity="fill"-->
            <!--app:tabIndicatorColor="@color/blue_deep"-->
            <!--app:tabIndicatorHeight="@dimen/x10"-->
            <!--app:tabMode="fixed"-->
            <!--app:tabSelectedTextColor="@color/blue_deep"-->
            <!--app:tabTextColor="@color/black"></android.support.design.widget.TabLayout>-->

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/transact_dbsy_viewpager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:scrollbars="none">-->

        <!--</android.support.v4.view.ViewPager>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal"
            android:background="@color/gray_qian"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center">

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/transact_dbsy_viewpagertab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8"
                app:stl_defaultTabTextColor="@color/white"
                app:stl_defaultTabTextHorizontalPadding="60dp"
                app:stl_dividerColor="#00000000"
                app:stl_dividerThickness="0dp"
                app:stl_indicatorColor="@color/blue_deep"
                app:stl_indicatorCornerRadius="@dimen/x35"
                app:stl_indicatorGravity="center"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorThickness="@dimen/x70"
                app:stl_underlineColor="#00000000"
                app:stl_underlineThickness="0dp" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/transact_dbsy_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/transact_dbsy_viewpagertab" />


    </LinearLayout>
</LinearLayout>
